<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <CheckBox
        android:id="@+id/CheckBox03"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/CheckBox02"
        android:layout_below="@+id/CheckBox02"
        android:layout_marginTop="20dp"
        android:text="Thursday" />

    <CheckBox
        android:id="@+id/CheckBox04"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/CheckBox03"
        android:layout_below="@+id/CheckBox03"
        android:layout_marginTop="20dp"
        android:text="Friday" />

    <CheckBox
        android:id="@+id/CheckBox02"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/CheckBox01"
        android:layout_below="@+id/CheckBox01"
        android:layout_marginTop="20dp"
        android:text="Wednesday" />

    <CheckBox
        android:id="@+id/CheckBox01"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/checkBox1"
        android:layout_below="@+id/checkBox1"
        android:layout_marginTop="20dp"
        android:text="Tuesday" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Monday" />

    <CheckBox
        android:id="@+id/CheckBox05"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/CheckBox04"
        android:layout_below="@+id/CheckBox04"
        android:layout_marginTop="20dp"
        android:text="Saturday" />

    <CheckBox
        android:id="@+id/CheckBox06"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/CheckBox05"
        android:layout_below="@+id/CheckBox05"
        android:layout_marginTop="20dp"
        android:text="Saturday" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Choose days you want to work out"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>