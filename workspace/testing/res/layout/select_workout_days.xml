<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <CheckBox
        android:id="@+id/Thursday"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/Wednesday"
        android:layout_below="@+id/Wednesday"
        android:layout_marginTop="20dp"
        android:text="Thursday"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/Friday"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/Thursday"
        android:layout_below="@+id/Thursday"
        android:layout_marginTop="20dp"
        android:text="Friday"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/Wednesday"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/Tuesday"
        android:layout_below="@+id/Tuesday"
        android:layout_marginTop="20dp"
        android:text="Wednesday"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/Tuesday"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/Monday"
        android:layout_below="@+id/Monday"
        android:layout_marginTop="20dp"
        android:text="Tuesday"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/Monday"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Monday"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/Saturday"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/Friday"
        android:layout_below="@+id/Friday"
        android:layout_marginTop="20dp"
        android:text="Saturday"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/Sunday"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/Saturday"
        android:layout_below="@+id/Saturday"
        android:layout_marginTop="20dp"
        android:text="Sunday"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Choose days you want to work out"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />
    
     <Button
        android:id="@+id/SubmitDays"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/Sunday"
        android:layout_below="@+id/Sunday"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:textColor="#000000" />

    
</RelativeLayout>