<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Congratulations!"
        android:textSize="35sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1C"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="You have completed your workout"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/SuccessesTextC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1C"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="Completed Workouts: "
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/AttemptedTextC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1C"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:text="Workouts Attempted: "
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/PercentTextC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1C"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:text="Percent Successful: "
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/InitialWeightC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1C"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:text="Initial Weight: "
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/LastWeightC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1C"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:text="Last Weight Measured: "
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/WeightChangeC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1C"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="285dp"
        android:text="Weight Change: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>